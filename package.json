{
  "name": "voice-translator-backend",
  "version": "1.0.0",
  "description": "Advanced Voice Translator Backend with MongoDB, AI Integration, and Real-time Translation",
  "main": "backend/index.js",
  "scripts": {
    "start": "node backend/index.js",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "server": "nodemon backend/index.js",
    "client": "cd frontend && REACT_APP_API_BASE_URL=${REACT_APP_API_BASE_URL:-http://localhost:5001} npm start",
    "test": "jest",
    "lint": "eslint backend/",
    "db:seed": "cd backend && ./scripts/seed.sh"
  },
  "proxy": "http://localhost:5001",
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@google-cloud/speech": "^7.1.0",
    "@google-cloud/text-to-speech": "^6.1.0",
    "@google-cloud/translate": "^9.1.0",
    "@google/generative-ai": "^0.24.1",
    "@react-native-voice/voice": "^3.2.4",
    "@speechmatics/batch-client": "^5.0.1",
    "@speechmatics/real-time-client": "^7.0.2",
    "bcryptjs": "^2.4.3",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.5.0",
    "express": "^5.1.0",
    "express-rate-limit": "^7.3.1",
    "express-validator": "^7.0.1",
    "firebase-admin": "^13.5.0",
    "helmet": "^8.0.0",
    "jsonwebtoken": "^9.0.2",
    "mammoth": "^1.10.0",
    "mongoose": "^8.8.0",
    "multer": "^2.0.2",
    "nodemailer": "^6.9.12",
    "pdf-parse": "^1.1.1",
    "sharp": "^0.34.3",
    "socket.io": "^4.8.1",
    "uuid": "^11.0.2",
    "winston": "^3.15.0"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4.1.10",
    "concurrently": "^8.2.2",
    "eslint": "^9.15.0",
    "jest": "^29.7.0",
    "nodemon": "^3.1.9",
    "supertest": "^7.0.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "keywords": [
    "voice-translation",
    "ai-translation",
    "real-time-translation",
    "multilingual",
    "speech-recognition",
    "document-translation",
    "image-translation"
  ]
}
